{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region":         "{{env `AWS_DEFAULT_REGION`}}",
        "source_ami":     "{{env `SOURCE_AMI`}}",
        "atlas_username": "clstokes",
        "atlas_name":     "consul"
    },
    "builders": [
        {
            "type":          "amazon-ebs",
            "access_key":    "{{user `aws_access_key`}}",
            "secret_key":    "{{user `aws_secret_key`}}",
            "region":        "{{user `region`}}",
            "source_ami":    "{{user `source_ami`}}",
            "instance_type": "t2.micro",
            "ssh_username":  "ubuntu",
            "ami_name":      "{{user `atlas_name`}} {{timestamp}}"
        },
        {
            "type": "docker",
            "image": "ubuntu:14.04",
            "export_path": "consul_docker.tar"
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz<wait>",
                " auto<wait>",
                " console-setup/ask_detect=false<wait>",
                " console-setup/layoutcode=us<wait>",
                " console-setup/modelcode=pc105<wait>",
                " debconf/frontend=noninteractive<wait>",
                " debian-installer=en_US<wait>",
                " fb=false<wait>",
                " initrd=/install/initrd.gz<wait>",
                " kbd-chooser/method=us<wait>",
                " keyboard-configuration/layout=USA<wait>",
                " keyboard-configuration/variant=USA<wait>",
                " locale=en_US<wait>",
                " netcfg/get_hostname=ubuntu-1404<wait>",
                " netcfg/get_domain=vagrantup.com<wait>",
                " noapic<wait>",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
                " -- <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": 40960,
            "guest_os_type": "linux",
            "http_directory": "files/vagrant/http",
            "iso_checksum": "83aabd8dcf1e8f469f3c72fff2375195",
            "iso_checksum_type": "md5",
            "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.2-server-amd64.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
            "vmx_data": {
                "memsize": "512",
                "numvcpus": "1",
                "cpuid.coresPerSocket": "1"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "only": ["docker"],
            "inline": ["apt-get install -y wget"]
        },
        {
            "type": "shell",
            "only": ["vmware-iso"],
            "script": "files/vagrant/vagrant-user.sh",
            "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        },
        {
            "type": "shell",
            "override": {
                "vmware-iso": {
                    "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
                }
            },
            "script": "files/installers/consul-install.sh"
        },
        {
            "type": "file",
            "source": "files/consul.d/consul-server.json",
            "destination": "/etc/consul.d/consul-server.json"
        },
        {
            "type": "file",
            "source": "files/init/consul_bootstrap.conf",
            "destination": "/etc/init/consul.conf"
        },
        {
            "type": "shell",
            "script": "files/installers/spark-install.sh"
        }
    ],
    "push": {
        "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "vcs": false
    },
    "post-processors": [
        [
            {
                "type": "atlas",
                "only": ["amazon-ebs"],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}-amazon-ebs",
                "artifact_type": "aws.ami",
                "metadata": {
                    "created_at": "{{timestamp}}"
                }
            }
        ],
        [
            {
                "type": "atlas",
                "only": ["vmware-iso"],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}-vmware-iso",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "vmware_desktop",
                    "created_at": "{{timestamp}}"
                }
            }
        ],
        [
            {
                "type": "atlas",
                "only": ["docker"],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}-docker",
                "artifact_type": "docker",
                "metadata": {
                "provider": "docker",
                    "created_at": "{{timestamp}}"
                }
            }
        ]
    ]
}
